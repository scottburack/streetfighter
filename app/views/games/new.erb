

<div id="start_fight">
  <%= form_for @game do |f| %>
    <%= f.label "Choose your fighter: "%>
    <%= f.collection_select :player_character_id, Character.all, :id, :name, {}, {:class=>'char_sel'} %>
    <%= f.label "Choose your opponent: "%>
    <%= f.collection_select :enemy_character_id, Character.all, :id, :name, {}, {:class=>'char_sel'} %><br>
    <%= f.submit "Fight!", :id => "fight_button" %>
    <% if @game.errors.any? %>
    <ul>
      <% @game.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    </ul>
    <% end %>
</div>



  <div id="flex-grid">
    <% Character.all.each do |char| %>
      <div id = "char_info">
        <img src="<%=char.image_url%>">
        <p><%= char.name %></p>
      </div>
    <% end %>
  </div>

<% end %>
